    <div class="main container">
    <br>
    <h1 class="heading-profile text-center">Your messages 🛎️</h1>
<br>
<% current_user.chatrooms.each do |chatroom| %>
 <ul>
   <li>

<div class="d-flex ">
  <%= link_to user_path(chatroom.friend) do %>
    <% if chatroom.other_user(current_user).photo.attached? %>
      <%= cl_image_tag chatroom.other_user(current_user).photo.key, class: "avatar-large dropdown-toggle"%>
    <% else %>
      <%= image_tag "avatar.png", class: "avatar-large"  %>
    <% end %>
  <% end  %>
<div>
    <h2><%= link_to chatroom.other_user(current_user).first_name, chatroom_path(chatroom), class: "heading-dashboard" %></h2>
    <strong><%= chatroom.messages.last.content if chatroom.messages.any? %></strong>
    <p><%= time_ago_in_words(chatroom.messages.last.created_at) %> ago</p>


</div>
</div>
  </li>
  <br>
 </ul>
 <%end %>
</div>
