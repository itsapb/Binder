<%# borrow books with book image %>

      <h2 class="heading-dashboard">Books you can borrow</h2>
      <div class="books-container">
        <ul>
          <% unless @droppable_books.empty? %>
            <% @droppable_books.each do |book| %>
              <div class="image">
                <%= cl_image_tag book.photo.key, height: 280, width: 180, crop: :fill %>
              </div>
              <% if user_signed_in? %>
                <%= form_with(model: @drop, url: book_drops_path(book), method: :post) do |form| %>
                <%= form.hidden_field :book_id, value: book.id %>
                <%= form.submit "Rent Book", class: "btn btn-black" %>
                <% end %>
              <% else %>
                <p>Please Log in to rent the book</p>
                <%= button_to "Log in", user_session_path, method: :get, class: "btn btn-black" %>
              <% end %>
            <% end %>
          <% end %>
        </ul>
      </div>
