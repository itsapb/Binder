  <div class="container">
    <h1>Welcome to <%= @user.first_name%>â€™s profile!</h1>
    <div class="main-container">
      <br>
      <h2 class="heading-dashboard">Currently Reading</h2>
      <ul>
        <div class="books-container">
          <% unless @user.books.empty? %>
            <% @user.books.each do |book| %>
              <div class="image">
                <%= cl_image_tag book.photo.key, height: 280, width: 180, crop: :fill %>
              </div>
              <div class="book-info">
                <h5><%= book.title %><br>by <%= book.author %></h5>
              </div>
            <% end %>
          <% end %>
        </div>
      </ul>
      <br>
      <h2 class="heading-dashboard"> <%=@user.first_name%> has read</h2>
      <div class="books-container">
        <ul>
          <% unless @read_books.empty? %>
            <% @read_books.each do |book| %>
              <div class="image">
                <%= cl_image_tag book.photo.key, height: 280, width: 180, crop: :fill %>
              </div>
              <li><%= book.title %> by <%= book.author %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
      <br>
      <h2 class="heading-dashboard">Books you can borrow</h2>
      <div class="books-container">
        <ul>
          <% unless @droppable_books.empty? %>
            <% @droppable_books.each do |book| %>
              <div class="image">
                <%= cl_image_tag book.photo.key, height: 280, width: 180, crop: :fill %>
              </div>
              <li><%= book.title %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
