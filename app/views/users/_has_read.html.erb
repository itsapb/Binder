    <h2 class="heading-dashboard text-center"><%=@user.first_name%> has read ğŸ“–</h2>
    <br>
    <div class="books-container1 pb-5">
      <% unless @read_books.empty? %>
        <% @read_books.each do |book| %>
          <div class="image1 text-center">
            <%= link_to book_path(book) do %>
              <%= cl_image_tag book.photo.key, height: 280, width: 180, crop: :fill %>
            <% end %>
            <% if book.droppable && user_signed_in? %>
              <%= form_with(model: @drop, url: book_drops_path(book), method: :post) do |form| %>
                <%= form.hidden_field :book_id, value: book.id %>
                <%= form.submit "Rent Book", class: "btn btn-black" %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% end %>
      <% unless @droppable_books.empty? %>
        <% @droppable_books.each do |book| %>
          <% unless book.have_read %>
            <div class="image1">
              <%= cl_image_tag book.photo.key, height: 280, width: 180, crop: :fill %>
              <% if user_signed_in? %>
                <%= form_with(model: @drop, url: book_drops_path(book), method: :post) do |form| %>
                <%= form.hidden_field :book_id, value: book.id %>
                <%= form.submit "Rent Book", class: "btn btn-black text-center pt-2" %>
                <% end %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
