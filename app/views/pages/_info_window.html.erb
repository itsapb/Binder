<% book = user.books.find_by(currently_reading: true) %>
<div class="profile-popup">
  <div class="user-info">
    <% if book.present? %>
          <h2 class="user-name"><%= user.first_name %> is currently reading</h2>
      <% end %>
  <div class="book-info">
  <div class="book-info">
  <div>
  <% if book.present? %>
    <%= link_to book_path(book) do %>
      <%= cl_image_tag book.photo.key, class: "book-image", crop: :fill %>
      <%# <div class="text-overlay top-right">Review</div> %>
      <div class="text-overlay bottom-right">Learn more</div>
    <% end %>
  </div>
    <div class="book-description">
      <p class="book-description-text"><%= truncate(book.description, length: 50, separator: ' ', omission: '...') %></p>
    </div>
  </div>
    <div class="popup-footer">
    <%= link_to "Visit Profile", user_path(book.user), class: "btn btn-black" %>
  </div>
  <% end %>
</div>
