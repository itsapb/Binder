<div class=" navbar navbar-expand-sm navbar-light navbar-lewagon ">
    <% if user_signed_in? %>

    <ul>
      <li class="pr-4 pl-4"><%= link_to "Dashboard 🪸", dashboard_path%></li> |
      <li class="pr-4 pl-4"><%= link_to "Map View 📍", root_path %></li> |
      <li class="pr-4 pl-4"><%= link_to "Messages 💬", chatrooms_path %></li> |
      <li class="pr-4 pl-4"><%= link_to "Be Inspired ✨", inspire_path %></li>
    </ul>
  <h3 class="heading-dashboard"> Hi <%= current_user.first_name %>!</h3>
<div class="pr-5 d-flex">

      <li class="nav-item dropdown">
        <% if current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, class: "avatar-large dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false  %>
        <% else %>
          <%= image_tag "avatar.png", class: "avatar-large dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false  %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
        </div>
      </li>
</div>

 <% else %>
      <div class=" float-right"><%= link_to "Sign up", new_user_registration_path, class: "navbar-link btn-black text-white"  %>
      <%= link_to "Login", new_user_session_path, class: "navbar-link btn-black text-white"  %></div>
    <% end %>

</div>
