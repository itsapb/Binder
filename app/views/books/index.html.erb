<ul>
  <% if !@books %>
    <p>There are no books in the system</p>
  <% else %>
    <% @books.each do |book| %>
      <div class="book" >
      <li>
        <%= link_to book.title, book_path(book), class: "book-title" %>
        <%= link_to book.author, book_path(book) %>
        <%= link_to "Delete", book_path(book), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </li>
      </div>
    <% end %>
  <% end %>
</ul>
